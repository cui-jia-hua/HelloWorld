<Page
    x:Class="HelloWorld.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HelloWorld"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Name="button1" Content="C3" FontSize="30" Click="button1_Click" />
                <Button Margin="20,0,0,0" Name="button2" Content="C4" FontSize="30" Click="button2_Click" />
            </StackPanel>
            <VariableSizedWrapGrid Name="Grid" ItemHeight="150" ItemWidth="150"
                                   MaximumRowsOrColumns="3" Orientation="Horizontal">
                <Rectangle Fill="Red" VariableSizedWrapGrid.RowSpan="2" VariableSizedWrapGrid.ColumnSpan="2" />
                <Rectangle Fill="Orange" VariableSizedWrapGrid.RowSpan="2"/>
                <Rectangle Fill="Yellow" VariableSizedWrapGrid.ColumnSpan="2" />
                <Rectangle Fill="Green" VariableSizedWrapGrid.RowSpan="2"/>
                <Rectangle Fill="LightBlue" />
                <Rectangle Fill="Blue" VariableSizedWrapGrid.RowSpan="2" VariableSizedWrapGrid.ColumnSpan="2" />
                <Rectangle Fill="BlueViolet" VariableSizedWrapGrid.ColumnSpan="2" />
                
            </VariableSizedWrapGrid>
        </StackPanel>
    </Grid>
    
</Page>
