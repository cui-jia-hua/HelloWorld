<Page
    x:Class="HelloWorld.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HelloWorld"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <RelativePanel Grid.Row="0">
            <TextBlock Text="Title" FontSize="30" FontWeight="Black" Margin="10,0,0,0" RelativePanel.AlignVerticalCenterWith="button" />
            <Button Name="button" Content="search" FontSize="20" Margin="20" RelativePanel.AlignRightWithPanel="True" />
            <TextBox Name="input" FontSize="20" RelativePanel.LeftOf="button" RelativePanel.AlignVerticalCenterWith="button" MinWidth="150" />
            <TextBlock Name="searchText" FontSize="30" Text="Search:" Margin="0,0,30,0" RelativePanel.LeftOf="input" RelativePanel.AlignVerticalCenterWith="button" />
        </RelativePanel>
        <Border Grid.Row="2" BorderThickness="5" BorderBrush="Gray">
            <RelativePanel Grid.Row="2" Background="LightGray">
                <TextBlock Text="Items:10" FontSize="20" Margin="10" RelativePanel.AlignLeftWithPanel="True" />
                <TextBlock Text="User:Bob" FontSize="20" Margin="10" RelativePanel.AlignHorizontalCenterWithPanel="True"/>
                <TextBlock Text="Version:1.0.0" FontSize="20" Margin="10" RelativePanel.AlignRightWithPanel="True" />
            </RelativePanel>
        </Border>
    </Grid>
</Page>
